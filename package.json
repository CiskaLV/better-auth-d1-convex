{
  "name": "better-auth-d1-convex-solid",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "auth:generate": "bun x @better-auth/cli@latest generate --output ./src/lib/db/auth-schema.ts -y",
    "db:generate": "bun x drizzle-kit generate",
    "db:migrate": "bun x wrangler d1 migrations apply better-auth-convex-solid",
    "types": "bun x wrangler types",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "deploy": "wrangler deploy",
    "start": "node .output/server/index.mjs"
  },
  "dependencies": {
    "@tanstack/router-plugin": "^1.139.14",
    "@tanstack/solid-router": "^1.139.14",
    "@tanstack/solid-router-devtools": "^1.139.14",
    "@tanstack/solid-start": "^1.139.14",
    "better-auth": "^1.4.5",
    "convex": "^1.30.0",
    "convex-solidjs": "^0.0.3",
    "drizzle-orm": "^0.45.0",
    "lucide-solid": "^0.555.0",
    "solid-js": "^1.9.10",
    "tailwindcss": "^4.1.17",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@cloudflare/vite-plugin": "^1.17.0",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/devtools-vite": "^0.3.11",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-solid": "^2.11.10",
    "wrangler": "^4.53.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  }
}
